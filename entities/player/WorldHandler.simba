(*
FullWorld
~~~~~~~~~

.. code-block:: pascal

    function fullWorld(W: integer): Boolean;

returns true if world is full

..note::

    by Ashaman88

Example:

.. code-block:: pascal

*)
function fullWorld(World: Integer): boolean;
var
  txt: string;
  checkbox: tbox;
begin
  if not (Me.getLoginState() = LS_WORLDSCREEN) then
    exit(false);
  checkbox := worldIndexToMSBox(World);
  txt := cs_GetTextAtEx(intToBox(checkbox.x1+44,checkbox.y1,checkbox.x2-10,checkbox.y2), 0, 4, 2, 16777215, 0, 'StatChars07', cs_CTS);
  result:= arrinstr(['FULL','ENLL','FNLL','EULL'],txt);
end;


(*
getWorldBox
~~~~~~~~~

.. code-block:: pascal

    function getWorldBox(W: integer): Boolean;

Gets the box of the given world.

..note::

    by Ashaman88 & Flight

Example:

.. code-block:: pascal

*)
function getWorldBox(W: integer): TBox;
begin
  result:=inttobox(0,0,0,0);
  if not (Me.getLoginState() = LS_WORLDSCREEN) then
    Exit;

  if not worldsOrdered() then
  begin
    if not orderWorlds() then
    begin
      Writeln('Could not order worlds properly.');
      exitWorldScreen();
      Exit;
    end;
    wait(400+random(200));
  end;

  if fullworld(W) then
  begin
    Writeln('World selected is currently full');
    exitWorldScreen();
    exit;
  end;

  result := worldIndexToMSBox(W);
  end;

(*
SelectWorld
~~~~~~~~~~~

.. code-block:: pascal

    Function selectWorld(W: Integer): Boolean;

Switches to the specified world. Returns true if successful.

..note::

    by Narcle / ZephyrsFury & Flight

Example:

.. code-block:: pascal

*)
function selectWorld(W: integer): boolean;
var
  T : Timer;
  i : integer;
  validworld : boolean;
  worldbox : tbox;
begin
  if (getCurrentWorldLS() = w) then
    exit(true);

  if Length(WorldArray) < 1 then
    worldarray :=
    [301,320,341,360,+
     302,321,342,361,+
     303,322,343,362,+
     304,344,365,+      // 325 removed
     305,326,345,366,+
     306,327,346,367,+
     309,328,349,368,+
     310,329,350,369,+
     311,330,351,370,+
     312,333,352,373,+
     313,334,353,374,+
     314,335,354,375,+
     317,336,357,376,+
     318,358,377,+      // 337 removed
     319,338,359,378];
  for i:=0 to high(worldarray) do
  begin
    if worldarray[i]=W then
    begin
      arraynumber := i;
      validworld := true;
      break;
    end
  end;

  if not validworld then
  begin
    Writeln('Invalid world');
    exitWorldScreen();
    Exit(false);
  end;

  if openWorldScreen() then
  begin
    worldbox:= getWorldBox(I);
    if worldbox.x1 = 0 then
    begin
      exitWorldScreen();
      exit(false);
    end;
    mousebox(worldbox, MOUSE_LEFT);
    result:=true;
  end;

  T.start();
  repeat
    wait(randomrange(400,500));
    if not (Me.getLoginState() = LS_WORLDSCREEN) then
      break;
  until(T.timeElapsed() > 6000);

  if (Me.getLoginState() = LS_WORLDSCREEN) then
    exitWorldScreen();

  wait(randomrange(400,500));
  if (not(Result)) then TypeByte(vk_Escape);
end;


