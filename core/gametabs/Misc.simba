(*
GetCurrentWorld
~~~~~~~~~~~~

.. code-block:: pascal

    function getCurrentWorld(): Integer;

Returns current world from Friends Tab

.. note::

    by ??
    Last Modified: 06-12-2013 by Flight

Example:

.. code-block:: pascal

*)
function getCurrentWorld(): Integer;
var
  Box  : TBox;
  tCol : TColEx;
  TPA  : TPointArray;
begin
  Result := - 1;
  if not gameTab(TAB_FRIENDS) then
    Exit
  else
    Wait(250 + Random(100));
  tCol.create(3381759, 1);
  if not tCol.findAllIn(toBox(695,210,725,222), TPA) then
    Exit;
  Box := getTPABounds(TPA);
  Result := strToIntDef(ExtractFromStr(getTextAtEx(Box.X1, Box.Y1, Box.X2, Box.Y2, 0, 5, 1, 3381759, 0, 'UpChars07'), Numbers), - 1);
  if (Result = - 1) then
    warn('Failed to get current world', WT_CORE);
end;

(*

SetFightMode
~~~~~~~~~~~~

.. code-block:: pascal

    function setFightMode(oFightMode: Integer): Boolean;

Sets fight mode.  Returns false if failed to set desired mode.

.. note::

    by Nielsie95 & Nava2, Quickmarch
    Last Modified: 06-12-2013 by Flight

Example:

.. code-block:: pascal

*)
function setFightMode(Mode: Integer): Boolean;
var
  b        : TBox;
  pnt      : TPoint;
  tCol     : TColEx;
  i        : Integer;
  cmbBoxes : TBoxArray;
begin
  if not isLoggedIn() then
    exit(false);
  if not gameTab(TAB_COMBAT) then
    exit(false);
  Wait(100 + Random(100));

  if (not(inRange(Mode, 1, 4))) then
  begin
    warn(toStr(Mode) + ' is not a valid fightmode number.', WT_CORE);
    Exit(false);
  end;

  cmbBoxes := [toBox(572, 255, 631, 290), toBox(656, 255, 715, 290),
               toBox(572, 308, 631, 343), toBox(655, 308, 714, 343)];
  b := cmbBoxes[Mode - 1];

{ If no 4th weapon option goto 3rd option }
  tCol.create(2070783, 1);
  if (Mode = 4) and (not tCol.findIn(toBox(655,308,714,343), pnt)) then
    b := cmbBoxes[2];

  i := 0;
  tCol.create(1908609, 5);
  while (i < 4) do
  begin
    if tCol.findIn(b, pnt) then
      Exit(true);
    mouseBox(b, MOUSE_LEFT);
    Wait(200 + Random(300));
    Inc(i);
  end;
end;

