  if Enable then
  begin
    if not waitFindColor(Pnt, 1974404, 5, toBox(600,380,635,400), 100) then
    begin
      mouseBox(toBox(572,362,713,397), MOUSE_LEFT);
      waitFindColor(Pnt, 2070783, 5, toBox(572,362,713,397), 3500);
    end;
